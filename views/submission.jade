extends layout

block content
    u: h3 #{post_title}  
    a(href='/edit/#{pid}') Edit this post
    br
    br
    | <b>Submitted by:</b>  #{submitter}
    | <b>Date:</b>  #{date}
    br
    br
    b Summary
    br
    textarea(rows=4 cols=80 readonly) #{summary}
    br
    br
    b Files
    br
    - for ( var i in files )
        - var f = files[i]
        a(href='/#{f.path}') #{f.name}
        br
    br
    br
    b Body
    br
    textarea(rows='#{body_rows}' cols=80 readonly) #{body}
    br
    br
    a(href='/delete/#{pid}') Delete this post


