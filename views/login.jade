extends layout

block content
    form(class='form-horizontal',action='/',method='POST',id='loginForm')
            div.control-group
                label(for='username',class='control-label') Group
                div.controls
                    input(type='text',id='username',name='username',placeholder='Group',class='input-xlarge')
            p
            div.control-group
                label(for='password',class='control-label') Password
                div.controls
                    input(type='password',id='password',name='password',placeholder='Password',class='input-xlarge')
            p
            div.control-group
                div.controls
                    input(type='submit',class='btn btn-success', value='submit') login
            p
            if (error!='')
                | #{error}
